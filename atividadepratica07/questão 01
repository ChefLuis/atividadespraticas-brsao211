import pandas as pd
import tkinter as tk
from tkinter import messagebox

def ler_csv():
    try:
        df = pd.read_csv("atividadepratica07/logs_treinamento7.csv")

        media = df["tempo_execucao"].mean()
        maximo = df["tempo_execucao"].max()

        resultado.set(
            f"Média do tempo de execução: {media:.2f}\n"
            f"Maior tempo de execução: {maximo}"
        )

    except FileNotFoundError:
        messagebox.showerror("Erro", "Arquivo CSV não encontrado.")
    except Exception as e:
        messagebox.showerror("Erro", f"Erro ao ler o arquivo:\n{e}")

# Interface
janela = tk.Tk()
janela.title("Leitor de CSV")

resultado = tk.StringVar()

botao = tk.Button(janela, text="Ler CSV", command=ler_csv)
botao.pack(pady=10)

label = tk.Label(janela, textvariable=resultado)
label.pack(pady=10)

janela.mainloop()
